<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IanTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IanTheme.Day">
        <item name="app_bg_color">@color/app_day_bg_color</item>
        <item name="app_text_color">@color/app_day_text_color</item>
        <item name="app_text_bg_color">@color/app_day_text_bg_color</item>
    </style>

    <style name="IanTheme.Night">
        <item name="app_bg_color">@color/app_night_bg_color</item>
        <item name="app_text_color">@color/app_night_text_color</item>
        <item name="app_text_bg_color">@color/app_night_text_bg_color</item>
    </style>
</resources>