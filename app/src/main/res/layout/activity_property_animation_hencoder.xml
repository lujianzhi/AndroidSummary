<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.lawson.androidsummery.hencoder.ui.views.NameImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            app:view_name="PathInterpolator" />

        <com.example.lawson.androidsummery.hencoder.ui.views.NameImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            app:view_name="CycleInterpolator" />

        <com.example.lawson.androidsummery.hencoder.ui.views.NameImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            app:view_name="AccelerateInterpolator" />

        <com.example.lawson.androidsummery.hencoder.ui.views.NameImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            app:view_name="DecelerateInterpolator" />

        <com.example.lawson.androidsummery.hencoder.ui.views.ArcAnimationView
            android:id="@+id/arcAnimationView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:view_name="ObjectAnimator" />

        <com.example.lawson.androidsummery.hencoder.ui.views.NameImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            app:view_name="PropertyAnimator" />
    </LinearLayout>

</ScrollView>