<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/pointToPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点对点连线" />

        <Button
            android:id="@+id/bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不同资源文件下加载bitmap" />

        <Button
            android:id="@+id/detect_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利用LeakCanary检测内存泄露" />

        <Button
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集合" />

        <Button
            android:id="@+id/touch_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件分发机制" />

        <Button
            android:id="@+id/toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义Toast" />

        <Button
            android:id="@+id/popup_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PopupWindow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/event_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventBus粘性事件" />

            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送粘性事件" />

        </LinearLayout>

        <Button
            android:id="@+id/hide_navigation_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏底部栏" />

        <Button
            android:id="@+id/pull_to_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PullToRefresh框架"/>

    </LinearLayout>


</ScrollView>
