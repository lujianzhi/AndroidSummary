<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/url_connection_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url_connection_post" />

        <Button
            android:id="@+id/url_connection_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url_connection_get" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/volley_string_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volley_string_request" />

        <Button
            android:id="@+id/volley_json_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volley_json_request" />

        <Button
            android:id="@+id/volley_image_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volley_image_request" />

        <Button
            android:id="@+id/volley_image_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volley_image_loader" />

        <Button
            android:id="@+id/volley_network_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volley_network_image_view" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/image2_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <ScrollView
        android:id="@+id/image_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <ScrollView
        android:id="@+id/content_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="content" />

    </ScrollView>

</LinearLayout>
