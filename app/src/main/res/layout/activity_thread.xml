<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_thread"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线程Thread" />

        <Button
            android:id="@+id/runnable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线程Runnable" />

        <Button
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线程join" />

        <Button
            android:id="@+id/fixedThreadPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FixedThreadPool" />

        <Button
            android:id="@+id/singleThreadPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SingleThreadPool" />

        <Button
            android:id="@+id/cachedThreadPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cachedThreadPool" />

        <Button
            android:id="@+id/scheduledThreadPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scheduledThreadPool" />

        <Button
            android:id="@+id/singleThreadScheduledPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="singleThreadScheduledPool" />

        <Button
            android:id="@+id/diy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按线程优先级" />

        <Button
            android:id="@+id/diy_thread_pool_executor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扩展线程池(线程开启前、后、结束)" />

    </LinearLayout>

</ScrollView>
